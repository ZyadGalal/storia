<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/camera_bakground"
    tools:context="com.example.shhata.storia.signUpActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logostringe"
        android:layout_above="@+id/linearLayout_sign_Up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/linearLayout_sign_Up"
        style="@style/tableStyle"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:background="@drawable/user_in" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:background="@drawable/ic_email" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:background="@drawable/ic_action_name" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:background="@drawable/ic_action_name" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="18dp"
                android:layout_weight="1"
                android:background="@drawable/ic_birthdate" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffffff"
                android:hint="Name"
                android:maxLines="4"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/edit_Name_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffffff"
                android:hint="Email"
                android:inputType="textEmailSubject"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/edit_password_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffffff"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/edit_password_signUp_confirm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffffff"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/edit_BirthDay_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffffff"
                android:hint="Birthday"
                android:inputType="date"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_below="@+id/linearLayout_sign_Up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:alpha=".5"
        android:background="@drawable/buttonshap"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp"/>


</RelativeLayout>
